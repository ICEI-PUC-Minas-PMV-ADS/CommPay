    <nav class="navbar com-nav">
        <div class="container-fluid justify-content-center">
            <div class="navbar-brand" href="#">
                <img src="/src/logo_b.svg" width="120">
            </div>
        </div>
    </nav>
    </header>


    <main>
    <div class="container mb-5 d-flex flex-column align-items-center mt-4">


        <img src="/src/login-bb.svg" width="250">
        <h2 class="mb-5">Seja Bem-Vindo!</h2>



        
    <div class="col-md-3">
            
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Insira seu nome" />
                    <!--<span asp-validation-for="Nome" class="text-danger"></span>-->
            </div>

            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" placeholder="Insira sua senha" />
                    <!--<span asp-validation-for="Senha" class="text-danger"></span>-->
            </div>

            <div class="form-group">
                    <input type="submit" value="Entrar" class="btn com-btn-primary col-12" />
             </div>



        </form>

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-primary text-center" role="alert">
                        @ViewBag.Message
                    </div>
                }
            
            
    </div>
            
       
    </div>
    </main>



